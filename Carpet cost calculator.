def carp_cost(width, length, price):
    carpet = width * length * price
    grippers = width + length
    fitting = 50
    return carpet + grippers + fitting

width = int(input("> Enter the width of the space where you want your carpet to be to the nearest meter pls - "))
length = int(input("> Enter the length of the space where you want your carpet to be to  the nearest meter (again pls) -  "))
price = 6.5
print("\n\n----------------------------------------------------------------\ntotal: Â£", carp_cost(width, length, price))
print("----------------------------------------------------------------\n> cash or card?")

