
def adder():
    total = 0
    top = 0
    count = 0
    ave = 0
    complete = False
    while not complete:
        number = float(input("Enter number: "))
        if number != 0:
            total = total + number
            count = count + 1
            if number > top:
                top = number
        else:
            complete = True
            if count > 0:
                ave = total / count
    print("Total:", total, "Top:", top, "Ave:", ave)

adder()
